---
pagination:
  data: collections.zhTagList
  size: 1
  alias: tag
permalink: /zh/blog/tags/{{ tag | slugify }}/
layout: layouts/base.njk
lang: zh
eleventyComputed:
  title: "标签「{{ tag }}」的文章"
  description: "所有标记为 {{ tag }} 的博客文章。"
---

<section class="blog-list">
  <div class="container">
    <div class="section-title">
      <h1>标签「{{ tag }}」的文章</h1>
      <p><a href="/zh/blog/tags/">← 所有标签</a></p>
    </div>

    <div class="blog-grid">
      {% for post in collections.zhPostsByTag[tag] %}
      <article class="blog-card">
        <div class="blog-card-content">
          <p class="blog-card-meta">
            <time datetime="{{ post.date | isoDate }}">{{ post.date | dateFormat }}</time>
            {% if post.data.author %} &middot; {{ post.data.author }}{% endif %}
          </p>
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <p>{{ post.data.description }}</p>
          {% if post.data.tags %}
          <div style="margin-top: var(--space-3);">
            {% for t in post.data.tags %}
            {% if t != 'post' and t != 'posts' %}
            <a href="/zh/blog/tags/{{ t | slugify }}/" class="tag tag-secondary {% if t == tag %}tag-active{% endif %}">{{ t }}</a>
            {% endif %}
            {% endfor %}
          </div>
          {% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
