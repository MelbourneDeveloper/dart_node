---
pagination:
  data: collections.categoryList
  size: 1
  alias: category
permalink: /blog/categories/{{ category | slugify }}/
layout: layouts/base.njk
eleventyComputed:
  title: "{{ category | capitalize }}"
  description: "All blog posts in the {{ category }} category."
---

<section class="blog-list">
  <div class="container">
    <div class="section-title">
      <h1>{{ category | capitalize }}</h1>
      <p><a href="/blog/categories/">‚Üê All categories</a></p>
    </div>

    <div class="blog-grid">
      {% for post in collections.postsByCategory[category] %}
      <article class="blog-card">
        <div class="blog-card-content">
          <p class="blog-card-meta">
            <time datetime="{{ post.date | isoDate }}">{{ post.date | dateFormat }}</time>
            {% if post.data.author %} &middot; {{ post.data.author }}{% endif %}
          </p>
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <p>{{ post.data.description }}</p>
          {% if post.data.tags %}
          <div style="margin-top: var(--space-3);">
            {% for tag in post.data.tags %}
            {% if tag != 'post' and tag != 'posts' %}
            <a href="/blog/tags/{{ tag | slugify }}/" class="tag tag-secondary">{{ tag }}</a>
            {% endif %}
            {% endfor %}
          </div>
          {% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</section>
