<!DOCTYPE html>
<html lang="{{ lang | default('en') }}">
<head>
  <script>
    (function() {
      var theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
      var lang = localStorage.getItem('lang');
      if (lang) document.documentElement.setAttribute('lang', lang);
    })();
  </script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Primary Meta Tags -->
  <title>{{ title | default(site.title) }}</title>
  <meta name="title" content="{{ title | default(site.title) }}">
  <meta name="description" content="{{ description | default(site.description) }}">
  <meta name="author" content="{{ site.author }}">
  <meta name="keywords" content="{{ keywords | default('Dart, JavaScript, TypeScript, React, Express, Node.js, full-stack, web development, mobile development, React Native, dart_node, type safety') }}">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  <meta name="generator" content="Eleventy">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Hreflang for language alternates -->
  <link rel="alternate" hreflang="en" href="{{ site.url }}{{ page.url | replace('/zh/', '/') | replace('/zh', '/') }}">
  <link rel="alternate" hreflang="zh" href="{{ site.url }}/zh{{ page.url | replace('/zh/', '/') | replace('/zh', '/') }}">
  <link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ page.url | replace('/zh/', '/') | replace('/zh', '/') }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="{% if layout == 'layouts/blog.njk' %}article{% else %}website{% endif %}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:title" content="{{ title | default(site.title) }}">
  <meta property="og:description" content="{{ description | default(site.description) }}">
  <meta property="og:image" content="{{ site.url }}/assets/images/og-image.png">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="dart_node - Full-Stack Dart for the JavaScript Ecosystem">
  <meta property="og:locale" content="{% if lang == 'zh' %}zh_CN{% else %}en_US{% endif %}">
  <meta property="og:locale:alternate" content="{% if lang == 'zh' %}en_US{% else %}zh_CN{% endif %}">
  <meta property="og:site_name" content="{{ site.name }}">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="{{ site.url }}{{ page.url }}">
  <meta name="twitter:title" content="{{ title | default(site.title) }}">
  <meta name="twitter:description" content="{{ description | default(site.description) }}">
  <meta name="twitter:image" content="{{ site.url }}/assets/images/og-image.png">
  <meta name="twitter:image:alt" content="dart_node - Full-Stack Dart for the JavaScript Ecosystem">
  <meta name="twitter:site" content="{{ site.twitter }}">
  <meta name="twitter:creator" content="{{ site.twitter }}">

  <!-- Theme Color -->
  <meta name="theme-color" content="{{ site.themeColor }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="/assets/css/styles.css">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  <link rel="apple-touch-icon" href="/assets/images/apple-touch-icon.png">

  <!-- RSS Feed -->
  <link rel="alternate" type="application/atom+xml" title="{{ site.name }} Feed" href="{{ site.url }}/feed.xml">

  <!-- JSON-LD Structured Data: Organization -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "dart_node",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/assets/images/og-image.png",
    "description": "{{ site.description }}",
    "sameAs": [
      "{{ site.github }}",
      "https://twitter.com/dart_node",
      "https://pub.dev/publishers/dartnode.dev"
    ]
  }
  </script>

  <!-- JSON-LD Structured Data: WebSite with SearchAction -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{ site.name }}",
    "url": "{{ site.url }}",
    "description": "{{ site.description }}",
    "inLanguage": ["en", "zh"],
    "potentialAction": {
      "@type": "SearchAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "{{ site.url }}/search?q={search_term_string}"
      },
      "query-input": "required name=search_term_string"
    }
  }
  </script>

  <!-- JSON-LD Structured Data: SoftwareSourceCode -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "SoftwareSourceCode",
    "name": "dart_node",
    "description": "Full-Stack Dart for the JavaScript Ecosystem - Write React, React Native, and Express applications entirely in Dart",
    "codeRepository": "{{ site.github }}",
    "programmingLanguage": {
      "@type": "ComputerLanguage",
      "name": "Dart"
    },
    "runtimePlatform": ["Node.js", "Browser"],
    "targetProduct": {
      "@type": "SoftwareApplication",
      "name": "dart_node packages",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": ["Windows", "macOS", "Linux"]
    },
    "author": {
      "@type": "Organization",
      "name": "dart_node team"
    },
    "license": "https://opensource.org/licenses/MIT"
  }
  </script>

  {% if "/docs/" in page.url %}
  <!-- JSON-LD Structured Data: TechArticle for documentation pages -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "TechArticle",
    "headline": "{{ title }}",
    "description": "{{ description | default(site.description) }}",
    "url": "{{ site.url }}{{ page.url }}",
    "author": {
      "@type": "Organization",
      "name": "dart_node team"
    },
    "publisher": {
      "@type": "Organization",
      "name": "dart_node",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ site.url }}/assets/images/og-image.png"
      }
    },
    "datePublished": "{{ page.date | isoDate }}",
    "dateModified": "{{ page.date | isoDate }}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url }}{{ page.url }}"
    },
    "about": {
      "@type": "Thing",
      "name": "Dart programming language"
    },
    "proficiencyLevel": "Beginner to Advanced"
  }
  </script>
  {% endif %}

  <!-- BreadcrumbList for navigation -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ site.url }}{% if lang == 'zh' %}/zh{% endif %}/"
      }
      {% if "/docs/" in page.url %}
      ,{
        "@type": "ListItem",
        "position": 2,
        "name": "Documentation",
        "item": "{{ site.url }}{% if lang == 'zh' %}/zh{% endif %}/docs/getting-started/"
      }
      ,{
        "@type": "ListItem",
        "position": 3,
        "name": "{{ title }}",
        "item": "{{ site.url }}{{ page.url }}"
      }
      {% elif "/blog/" in page.url %}
      ,{
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "{{ site.url }}{% if lang == 'zh' %}/zh{% endif %}/blog/"
      }
      {% if title != "Blog" %}
      ,{
        "@type": "ListItem",
        "position": 3,
        "name": "{{ title }}",
        "item": "{{ site.url }}{{ page.url }}"
      }
      {% endif %}
      {% elif "/api/" in page.url %}
      ,{
        "@type": "ListItem",
        "position": 2,
        "name": "API Reference",
        "item": "{{ site.url }}{{ page.url }}"
      }
      {% endif %}
    ]
  }
  </script>

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-1EDXMWNNRQ"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-1EDXMWNNRQ');
  </script>

  {% block head %}{% endblock %}
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <header class="header">
    <nav class="nav container">
      <a href="{% if lang == 'zh' %}/zh/{% else %}/{% endif %}" class="logo">
        <span class="logo-text">dart_node</span>
      </a>

      <ul class="nav-links">
        {% set navData = navigation_zh if lang == 'zh' else navigation %}
        {% for item in navData.main %}
        <li>
          <a href="{{ item.url }}" {% if item.external %}target="_blank" rel="noopener noreferrer"{% endif %}
             class="nav-link {% if page.url.startsWith(item.url) %}active{% endif %}">
            {{ item.text }}
            {% if item.external %}<span class="external-icon" aria-hidden="true">&#8599;</span>{% endif %}
          </a>
        </li>
        {% endfor %}
      </ul>

      <div class="nav-actions">
        <div class="language-switcher">
          <button class="language-btn" aria-label="Select language" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span>{{ languages[lang | default('en')].nativeName }}</span>
            <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <ul class="language-dropdown" role="menu">
            {% for langCode, langData in languages %}
            <li role="menuitem">
              <a href="{% if langCode == 'en' %}{{ page.url | replace('/zh/', '/') | replace('/zh', '/') }}{% else %}/{{ langCode }}{{ page.url | replace('/zh/', '/') | replace('/zh', '/') }}{% endif %}"
                 class="{% if (lang | default('en')) == langCode %}active{% endif %}"
                 lang="{{ langCode }}">
                {{ langData.nativeName }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>

        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
          <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>

        <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </nav>
  </header>

  <main id="main-content">
    {% block content %}{{ content | safe }}{% endblock %}
  </main>

  <footer class="footer">
    <div class="container footer-grid">
      {% set footerNav = navigation_zh if lang == 'zh' else navigation %}
      {% for section in footerNav.footer %}
      <div class="footer-section">
        <h3>{{ section.title }}</h3>
        <ul>
          {% for item in section.items %}
          <li><a href="{{ item.url }}">{{ item.text }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>

    <div class="container footer-cta">
      <p>{% if lang == 'zh' %}喜欢 dart_node？{% else %}Love dart_node?{% endif %}</p>
      <div class="footer-cta-buttons">
        <a href="https://github.com/MelbourneDeveloper/dart_node" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          {% if lang == 'zh' %}给个 Star{% else %}Star on GitHub{% endif %}
        </a>
        <a href="https://pub.dev/publishers/dartnode.dev/packages" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
          {% if lang == 'zh' %}在 pub.dev 点赞{% else %}Like on pub.dev{% endif %}
        </a>
      </div>
    </div>

    <div class="container footer-bottom">
      <p>&copy; {% year %} dart_node. Built with Dart.</p>
      <p>Made for React developers. Made for Flutter developers. Made for everyone.</p>
    </div>
  </footer>

  <script src="/assets/js/main.js"></script>
  <!-- Mermaid for diagrams -->
  <script type="module">
    import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
    mermaid.initialize({
      startOnLoad: true,
      theme: document.documentElement.getAttribute('data-theme') === 'dark' ? 'dark' : 'default',
      securityLevel: 'loose'
    });

    // Re-render mermaid when theme changes
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      setTimeout(() => {
        const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
        mermaid.initialize({ theme: isDark ? 'dark' : 'default' });
        document.querySelectorAll('.mermaid').forEach(el => {
          const code = el.getAttribute('data-mermaid') || el.textContent;
          el.removeAttribute('data-processed');
          el.innerHTML = code;
        });
        mermaid.run();
      }, 100);
    });
  </script>
</body>
</html>
